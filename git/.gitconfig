    name = John Zhao
    email = kangzhiz@pm.me

[core]
	excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

[alias]
    a = add
    aa = add -A
    ac = !git add -A && git commit -m
    b = branch
    ba = branch -a
    bd = branch -d
    bo = checkout -b
    c = commit -m
    ca = commit --amend -m
    can = commit --amend --no-edit
    d = diff
    dc = diff --cached
    do = diff ...origin
    f = fetch -vp
    fa = fetch -vp --all
    l = log --oneline --graph
    ll = log --stat --graph
    lll = log --patch-with-stat --graph
    m = merge
    o = checkout
    p = push
    r = restore
    rs = restore -S
    rstp = reset --soft @{1}
    s = status -sb
    sd = !git diff --stat && git diff --stat --cached
    t = stash list
    td = stash drop
    to = stash pop -q
    tu = stash push -m
    vd = difftool
    vdc = difftool --cached
