#!/usr/bin/env bash


DOTFILES_DIR="$HOME/Documents/dotfiles"

printf "Installing packages from Homebrew...\n"

# make sure brew.txt exists
if [ ! -f $DOTFILES_DIR/packages/brew.txt ]; then
    printf "Installation stopped: packages/brew.txt not found.\n"
    exit
fi

# install packages
brew install $(cat $DOTFILES_DIR/packages/brew.txt)
